<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <div class="text-container">
      <h1 class="display-3 font-weight-bold">
        Welcome to CEG Club Connex
      </h1>
      <p class="lead font-italic">
        A centralized platform for all CEG clubs, enabling students to communicate, register, and access events easily. 
      </p>
    </div>
    
    <div class="mt-4">
      <a href="/register" class="btn btn-warning btn-lg mr-3 shadow-lg" style="font-size: 1.2rem;">
        <i class="fas fa-user-plus"></i> Register
      </a>
      <a href="/login" class="btn btn-outline-light btn-lg shadow-lg" style="font-size: 1.2rem;">
        <i class="fas fa-sign-in-alt"></i> Login
      </a>
    </div>
  </div>
</div>



<div class="container mt-5">
  <h2 class="text-center mb-4">Our Clubs</h2>
  <div class="row">
    <% clubs.forEach(club => { %>
      <div class="col-md-4 mb-4">
        <div class="card club-tile">
          <div class="card-body">
            <h5 class="card-title"><%= club.club_name %></h5>
            <p class="card-text"><%= club.club_description %></p>
            <p class="card-text"><strong>President:</strong> <%= club.student_name %></p>
            <p class="card-text"><strong>Contact:</strong> <%= club.ob_contact_details %></p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('partials/footer') %>

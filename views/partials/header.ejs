<script>
  // Reload the page every 5 seconds
  setInterval(function() {
    location.reload();
  }, 3000000);
</script>
<body>
  <nav class="navbar navbar-expand-lg " style="background-color: #131010;" >
    
      <div class="navbar-brand" >
        <img src="/images/C3 Logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        CEG Club Connex
      </div>
      <div class="ml-auto">
        <% if (isLoggedIn) { %>
         
          <!-- Show Logout button if the user is logged in -->
          <a class="btn btn-warning" href="/logout">Logout</a>
        <% } else { %>
          <a class="btn btn-warning mr-2" href="/">Home</a>
          <!-- Show Register and Login buttons if the user is not logged in -->
          <a class="btn btn-warning mr-2" href="/register">Register</a>
          <a class="btn btn-warning" href="/login">Login</a>
        <% } %>
      </div>

  </nav>
</body>
